                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "company",
                                    "position",
                                    "applied_date"
                                ],
                                "properties": {
                                    "company": {
                                        "type": "string",
                                        "example": "Google"
                                    },
                                    "position": {
                                        "type": "string",
                                        "example": "Senior Developer"
                                    },
                                    "status": {
                                        "type": "string",
                                        "enum": [
                                            "Applied",
                                            "Interview",
                                            "Technical Test",
                                            "Offer",
                                            "Rejected"
                                        ]
                                    },
                                    "job_url": {
                                        "type": "string",
                                        "format": "url"
                                    },
                                    "job_description": {
                                        "type": "string"
                                    },
                                    "notes": {
                                        "type": "string"
                                    },
                                    "applied_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-11-14"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Application created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Application"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
